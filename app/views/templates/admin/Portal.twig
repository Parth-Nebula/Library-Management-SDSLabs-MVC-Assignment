{% extends "templates/0__base.twig" %}
{% block title %}
	{{- parent() -}}
    Home
{% endblock %}
{% block head %}
	{{- parent() -}}
    <link rel="stylesheet" type="text/css" href="/style/admin/Portalstyle.css">
{% endblock %}
{% block body %}
	{{- parent() -}}
    <div class="box">
        <form action="/goToAdminRequestIssuesPage" method="POST">
            <input type="submit" class="issueButton" value="Issue Requests">
        </form>
        <form action="/goToAdminRequestAdminsPage" method="POST">
            <input type="submit" class="adminButton" value="Admin Requests">
        </form>
    </div>
    <div class="box">
        <form action="/goToAdminBooksGivePage" method="POST">
            <input type="submit" class="giveButton" value="Give Books">
        </form>
        <form action="/goToAdminBooksTakePage" method="POST">
            <input type="submit" class="takeButton" value="Take Books">
        </form>
    </div>
    <div class="box">
        <form action="/goToAdminBooksAddPage" method="POST">
            <input type="submit" class="addButton" value="Add Books">
        </form>
        <form action="/goToAdminBooksRemovePage" method="POST">
            <input type="submit" class="removeButton" value="Remove Books">
        </form>
    </div>
    <form action="/logoutAdmin" method="POST">
        <input type="submit" class="logoutButton" value="Logout">
    </form>
{% endblock %}